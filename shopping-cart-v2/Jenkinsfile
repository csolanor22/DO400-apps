pipeline {
    agent { node { label 'maven' } }
    environment { APP_NAMESPACE = 'RHT_OCP4_DEV_USER-recover' }
    stages {
        options { timeout(time: 50, unit: 'SECONDS') }
        stage('Test') {
            steps {
                dir('shopping-cart-v2') {
                    sh './mvnw clean test'
                }
            }
        }
    }
}